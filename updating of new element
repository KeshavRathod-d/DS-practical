#include<stdio.h> 
int main() 
{ 
  int i,t,a[10],k,m,n,j=0,b[10]; 
  printf("Enter the size of Array : "); 
  scanf("%d",&k); 
  printf("Enter the elements : "); 
  for(i=0;i<k;i++) 
  { 
    scanf("%d",&a[i]); 
  } 
  printf("enterd elements are : "); 
  for(i=0;i<k;i++) 
  { 
    printf("%d\t",a[i]); 
  } 
  printf("\nEnter the position to be update : "); 
  scanf("%d",&t); 
  printf("\nEnter the value to be update : "); 
  scanf("%d",&n); 
  for(i=0;i<k;i++) 
  { 
    if(i==t) 
    { 
       a[i]=n; 
    } 
  } 
  printf("\nUpdated value is:"); 
  for(i=0;i<k;i++) 
  { 
    printf("%d\t",a[i]); 
  } 
  return 0; 
} 
